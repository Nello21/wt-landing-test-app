generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  name             String?
  phoneNumber      String   @unique
  verificationCode String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Product {
  id      Int    @id @default(autoincrement())
  name    String
  article Int
  code    Int
  price   Int
}
