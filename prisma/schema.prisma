generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String?
  phone      String   @unique
  verifyCode String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Product {
  id      Int    @id @default(autoincrement())
  name    String
  article String
  code    String
  price   String
}
